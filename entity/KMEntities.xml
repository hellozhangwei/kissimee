<?xml version="1.0" encoding="UTF-8"?>

<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-2.1.xsd">

    <extend-entity entity-name="Product" package="mantle.product">
        <field name="primaryProductCategoryId" type="id"/>
        <field name="feature" type="text-short"/>
        <field name="uom" type="text-short"/>
        <!--<field name="dimension" type="text-short"/>-->
    </extend-entity>

    <extend-entity entity-name="Geo" package="moqui.basic">
        <field name="geoName" type="text-medium" enable-localization="true"/>
    </extend-entity>

    <extend-entity entity-name="Party" package="mantle.party">
        <field name="addressGeoId" type="id"/>
        <field name="cityGeoId" type="id"/>
    </extend-entity>

</entities>
